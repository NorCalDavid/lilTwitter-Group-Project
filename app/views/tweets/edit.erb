
<%if @tweets %>
<% @tweets.each do |tweet| %>
<!-- Edit form -->
  <form action="/users/<%= @user.id %>/tweets/<%=tweet.id%>" method="post">
  <input name="_method" type="hidden" value="PUT">
    <input type="text" name="message" placeholder=<%= tweet.message %> size="70">
    <input type="submit" value="edit">
  </form>

  <form action="/users/<%= @user.id %>/tweets/<%=tweet.id%>" method="post" class="deleteForm">
      <input name="_method" type="hidden" value="DELETE">
      <input type="submit" value="Delete">
  </form>

   <!--  delete form -->

  <% end %>
<%end %>



